                <label for="date_one">
                    01/01/19 19h00
                </label>
            </div>
            {% endfor %}
            {{ form_start(form) }}
                {{ form_widget(form.date) }}
                <button type="submit">Rechercher</button>
            {{ form_end(form) }}
        </form>
        </section>
