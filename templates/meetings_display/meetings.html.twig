{% block body %}
<html>
    <body>
        <section class="meetings__head">
            <div class="meetings_head-image">
                <img src="https://via.placeholder.com/170" alt="Meetings_images">
            </div>
            <div class="meetings__head-text">
                <h1>
                    Blockchain
                </h1>
                <div class="meetings__head-line"></div>
                <h2>
                    Theme
                </h2>
                <button type="submit">
                    button
                </button>
                <p>
                    20 personnes participent
                </p>
            </div>
            <div class="meetings__requirements">
                <h2>
                    Pré-requis
                </h2>
                <div class="meetings__head-line"></div>
                <p>
                    Pré-requis potentiel
                </p>
            </div>
        </section>
        <section class="meetings__description">
            <h2>
                Description
            </h2>
            <div class="meetings__head-line"></div>
            <p>
