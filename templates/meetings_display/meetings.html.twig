{% extends 'base.html.twig' %}

{% block body %}
        <section class="meetings__head">
            <div class="meetings_head-image">
                <img src="/img/placeholder.png" alt="Meetings_images">
            </div>
            <div class="meetings__head-text">
                <h1>
                   Programmation en {{ meetings.name }}
                </h1>
                <div class="meetings__head-line"></div>
                <h2>
                    Theme
                </h2>
                <button type="submit">
                    button
                </button>
                <p>
                    {{ meetings.participating }} personne(s) participent.
                </p>
            </div>
            {% if meetings.required %}
                <div class="meetings__requirements">
                    <h2>
                        Pré-requis
                    </h2>
                        <div class="meetings__head-line">
                            <p>
                                {{meetings.required}}
                            </p>
                        </div>
                </div>
            {% endif %}
        </section>
        <section class="meetings__description">
            <h2>
                Description
            </h2>
            <div class="meetings__head-line"></div>
            <p>
                {{ meetings.description }}
            </p>
        </section>
        <section class="meetings__schedule">
        <form>
             <div class="meetings_schedule-title">
                <h2>
                    Créneaux
                </h2>
            </div>
            <div class="meetings__head-line"></div>
            {% for i in 0..3 %}
            <div class="meetings__schedule__one">
                <input type="checkbox" id="date_one" name="date_one">
                <label for="date_one">
                    01/01/19 19h00
                </label>
            </div>
            {% endfor %}
            <button type="submit">Ajouter</button>
        </form>
        </section>
{% endblock %}