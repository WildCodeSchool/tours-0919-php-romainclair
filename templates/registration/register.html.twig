{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {'label': 'Pseudonyme :'}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe :'}) }}
        {{ form_row(registrationForm.mail, {'label' : 'Votre adresse mail' }) }}
        <div class="register__honeypot">
            <label for="email">E-mail *</label>
            <input name="email" class="email" type="email">
        </div>
        <button class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
