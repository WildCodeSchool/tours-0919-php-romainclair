{% extends 'base.html.twig' %}

{% block title %}Gérer thématiques{% endblock %}

{% block body %}
    <h1>Gestion des thématiques</h1>
    <a class="admin__link" href="{{ path('thematiques_new')}}">Créer</a>
    <div class="subject__allCards">

        {% for theme in themes %}
            <article class="subject__card" {# id="card{{ i }}" #}>
                <h2>Programmation en {{ theme.name }}</h2>
                <img class="subject__image" src="../uploads/thematiques/{{ theme.image }}" alt="placeholder for an illustration">
                <p class="subject__cardDescription">{{ theme.description }}</p>
                <a class="admin__link" href="{{ path('thematiques_edit', {'id': theme.id}) }}">Éditer</a>
                <a class="admin__link" href="{{ path('thematiques_delete', {'id': theme.id}) }}">Supprimer</a>
            </article>
        {% endfor %}
    </div>
{% endblock %}
